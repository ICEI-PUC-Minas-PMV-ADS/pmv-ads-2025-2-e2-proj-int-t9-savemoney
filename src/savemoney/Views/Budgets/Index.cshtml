@model IEnumerable<savemoney.Models.Budget>
@{
    ViewData["Title"] = "Meus Orçamentos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-wallet2 me-2"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow">
            <i class="bi bi-plus-circle me-2"></i> Novo Orçamento
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <p class="lead mt-3 text-muted">Você ainda não tem nenhum orçamento.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">Criar meu primeiro orçamento</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var budget in Model)
            {
                var totalLimit = budget.Categories.Sum(c => c.Limit);
                var totalSpent = budget.Categories.Sum(c => c.CurrentSpent);
                var percentage = totalLimit > 0 ? (totalSpent / totalLimit) * 100 : 0;

                <div class="col">
                    <div class="card h-100 shadow-lg border-0 hover-shadow">
                        <div class="card-header bg-gradient text-white @(budget.Status == BudgetStatus.Concluido ? "bg-success" : budget.Status == BudgetStatus.Arquivado ? "bg-secondary" : "bg-primary")">
                            <h5 class="mb-0">@budget.Name</h5>
                            <small>@budget.StartDate:dd/MM/yyyy até @budget.EndDate:dd/MM/yyyy</small>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(budget.Description))
                            {
                                <p class="text-muted small">@budget.Description</p>
                            }

                            <div class="mt-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="fw-bold">Total Gasto</span>
                                    <span class="fw-bold @(percentage > 100 ? "text-danger" : percentage > 80 ? "text-warning" : "text-success")">
                                        @percentage.ToString("F1")%
                                    </span>
                                </div>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar @(percentage > 100 ? "bg-danger" : percentage > 80 ? "bg-warning" : "bg-success")"
                                         role="progressbar"
                                         style="width: @Math.Min(percentage, 100)%"
                                         aria-valuenow="@percentage"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        <span class="fw-bold">
                                            R$ @totalSpent.ToString("F2") / R$ @totalLimit.ToString("F2")
                                        </span>
                                    </div>
                                    @if (percentage > 100)
                                    {
                                        <div class="progress-bar bg-danger" style="width: @(percentage - 100)%"></div>
                                    }
                                </div>
                            </div>

                            <hr class="my-4" />

                            <h6 class="fw-bold mb-3">Categorias</h6>
                            @foreach (var bc in budget.Categories)
                            {
                                var catPercent = bc.Limit > 0 ? (bc.CurrentSpent / bc.Limit) * 100 : 0;
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between small">
                                        <span>@bc.Category.Name</span>
                                        <span class="@(catPercent > 100 ? "text-danger" : catPercent > 80 ? "text-warning" : "text-success") fw-bold">
                                            @catPercent.ToString("F0")%
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar @(catPercent > 100 ? "bg-danger" : catPercent > 80 ? "bg-warning" : "bg-success")"
                                             style="width: @Math.Min(catPercent, 100)%"></div>
                                    </div>
                                    <small class="text-muted">
                                        R$ @bc.CurrentSpent.ToString("F2") de R$ @bc.Limit.ToString("F2")
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-light text-center">
                            <a asp-action="Edit" asp-route-id="@budget.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@budget.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
        transition: all 0.3s ease;
    }

    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>