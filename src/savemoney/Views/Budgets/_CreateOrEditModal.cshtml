@model savemoney.Models.Budget
@using savemoney.Models

<div class="modal fade" id="budgetModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content glass-panel premium-modal">

            <form action="/Budgets/@(Model.Id == 0 ? "Create" : "Edit")/@(Model.Id == 0 ? "" : Model.Id)" method="post">
                @Html.AntiForgeryToken()

                @if (Model.Id != 0)
                {
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                }

                <div class="modal-header-clean">
                    <div>
                        <h5 class="modal-title">@(Model.Id == 0 ? "Novo Orçamento" : "Editar Orçamento")</h5>
                        <p class="modal-subtitle">Defina limites para controlar seus gastos.</p>
                    </div>
                    <button type="button" class="btn-close-custom" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i></button>
                </div>

                <div class="modal-body-clean">

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="premium-label">Nome do Orçamento</label>
                        <input asp-for="Name" class="premium-input" placeholder="Ex: Orçamento Familiar 2025, Viagem..." />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="premium-label">Descrição (Opcional)</label>
                        <textarea asp-for="Description" class="premium-input" rows="2" placeholder="Detalhes sobre este planejamento..."></textarea>
                    </div>

                    <div class="grid-2-col mb-4">
                        <div class="form-group">
                            <label asp-for="StartDate" class="premium-label">Início</label>
                            <input type="date" asp-for="StartDate" class="premium-input" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="premium-label">Término</label>
                            <input type="date" asp-for="EndDate" class="premium-input" />
                        </div>
                    </div>

                    <div class="divider"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Status" class="premium-label">Status</label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<BudgetStatus>()" class="premium-select"></select>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <label class="premium-label mb-0" style="color: var(--pm-primary);">Categorias e Limites</label>
                        <button type="button" class="btn-premium-ghost btn-sm" id="addCategoryBtn">
                            <i class="bi bi-plus-lg"></i> Adicionar
                        </button>
                    </div>

                    <div class="category-list-header mb-2" style="display: grid; grid-template-columns: 2fr 1fr 40px; gap: 10px; padding: 0 10px;">
                        <span class="text-muted small fw-bold">CATEGORIA</span>
                        <span class="text-muted small fw-bold">LIMITE (R$)</span>
                        <span></span>
                    </div>

                    <div id="categoriesContainer" class="d-flex flex-column gap-2">
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            for (int i = 0; i < Model.Categories.Count; i++)
                            {
                                <div class="category-row" style="display: grid; grid-template-columns: 2fr 1fr 40px; gap: 10px; align-items: center;">
                                    <select name="Categories[@i].CategoryId" class="premium-select form-select-sm" required>
                                        <option value="">Selecione...</option>
                                        @foreach (var item in ViewBag.AvailableCategories)
                                        {
                                            <!option value="@item.Value" @(item.Value == Model.Categories[i].CategoryId.ToString() ? "selected" : "")>@item.Text</!option>
                                        }
                                    </select>
                                    <input name="Categories[@i].Limit" value="@Model.Categories[i].Limit.ToString("F2")" type="text" class="premium-input form-control-sm money-mask" placeholder="0,00" required />
                                    <button type="button" class="btn-icon danger" onclick="this.closest('.category-row').remove()" title="Remover">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            }
                        }
                    </div>

                    <div id="emptyTableMsg" class="text-center p-4 border border-dashed border-secondary rounded-3 mt-2 @(Model.Categories != null && Model.Categories.Any() ? "d-none" : "")" style="border-style: dashed; border-color: rgba(255,255,255,0.1);">
                        <i class="bi bi-layers text-muted fs-4 d-block mb-2"></i>
                        <span class="text-muted small">Nenhuma categoria definida.<br>O orçamento será global.</span>
                    </div>

                </div>

                <div class="modal-footer-clean">
                    <button type="button" class="btn-premium-ghost" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn-premium-purple">Salvar Orçamento</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<script id="categoryRowTemplate" type="text/template">
    <div class="category-row" style="display: grid; grid-template-columns: 2fr 1fr 40px; gap: 10px; align-items: center;">
        <select name="Categories[{INDEX}].CategoryId" class="premium-select form-select-sm" required>
            <option value="">Selecione...</option>
            @foreach (var item in ViewBag.AvailableCategories)
            {
                    <option value="@item.Value">@item.Text</option>
            }
        </select>
        <input name="Categories[{INDEX}].Limit" type="text" class="premium-input form-control-sm money-mask" placeholder="0,00" required />
        <button type="button" class="btn-icon danger" onclick="removerLinha(this)">
            <i class="bi bi-trash"></i>
        </button>
    </div>
</script>