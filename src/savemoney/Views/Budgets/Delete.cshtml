@model savemoney.Models.Budget
@{
    ViewData["Title"] = "Excluir Orçamento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Tem certeza que deseja excluir o orçamento?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Nome:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3 fw-bold">Período:</dt>
                        <dd class="col-sm-9">
                            @Model.StartDate.ToString("dd/MM/yyyy") até @Model.EndDate.ToString("dd/MM/yyyy")
                        </dd>

                        <dt class="col-sm-3 fw-bold">Status:</dt>
                        <dd class="col-sm-9">@Model.Status</dd>
                    </dl>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                Sim, Excluir
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>