@* _HeaderPf.cshtml - Menu Pessoa Fisica *@
@using System.Security.Claims

<header id="main-header" class="header-pf-theme">
    <div class="header-container">

        <a asp-controller="Dashboard" asp-action="Index" class="header-logo" title="Painel">
            <i class="bi bi-person-circle text-success me-2"></i>SaveMoney
            <span class="badge bg-success ms-2" style="font-size: 0.6rem; vertical-align: middle;">PF</span>
        </a>

        <nav class="header-nav">
            <ul class="header-nav-links">
                <li><a asp-controller="Dashboard" asp-action="Index">Painel</a></li>

                <!-- Carteira -->
                <li class="header-dropdown">
                    <a href="#">Carteira <i class="bi bi-chevron-down"></i></a>
                    <ul class="header-dropdown-menu">
                        <li><a asp-controller="Receitas" asp-action="Index">Receitas</a></li>
                        <li><a asp-controller="Despesas" asp-action="Index">Despesas</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a asp-controller="Historico" asp-action="Index">Historico</a></li>
                        <li><a asp-controller="Categories" asp-action="Index">Categorias</a></li>
                    </ul>
                </li>

                <!-- Metas -->
                <li class="header-dropdown">
                    <a href="#" class="text-success">Metas <i class="bi bi-chevron-down"></i></a>
                    <ul class="header-dropdown-menu">
                        <li><a asp-controller="Budgets" asp-action="Index">Orcamentos</a></li>
                        <li><a asp-controller="MetasFinanceiras" asp-action="Index">Objetivos</a></li>
                    </ul>
                </li>

                <!-- Relatorios -->
                <li class="header-dropdown">
                    <a href="#">Relatorios <i class="bi bi-chevron-down"></i></a>
                    <ul class="header-dropdown-menu">
                        <li><a asp-controller="Relatorios" asp-action="Index">Visao Geral</a></li>
                        <li><a asp-controller="TendenciaFinanceira" asp-action="Index">Tendencias</a></li>
                    </ul>
                </li>

                <!-- Ferramentas -->
                <li class="header-dropdown">
                    <a href="#">Ferramentas <i class="bi bi-chevron-down"></i></a>
                    <ul class="header-dropdown-menu">
                        <li><a asp-controller="Ferramentas" asp-action="CalculadoraDeMetas">Calculadora de Metas</a></li>
                        <li><a asp-controller="Ferramentas" asp-action="JurosCompostos">Juros Compostos</a></li>
                        <li><a asp-controller="ConversorEnergias" asp-action="Index">Economia de Energia</a></li>
                    </ul>
                </li>

                <li><a asp-controller="EducacaoFinanceira" asp-action="Index">Aprender</a></li>

                @if (User.IsInRole("Administrador"))
                {
                    <li><a asp-controller="Usuarios" asp-action="Index" class="text-danger">Admin</a></li>
                }
            </ul>
        </nav>

        <div class="header-actions">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                var userName = User.Identity.Name ?? "User";
                var initials = userName.Length >= 2 ? userName.Substring(0, 2).ToUpper() : userName.ToUpper();

                <div class="header-user-avatar" title="@userName">
                    <span>@initials</span>
                </div>
            }
        </div>

        <button class="header-mobile-toggle" id="mobile-menu-toggle" aria-label="Menu">
            <i class="bi bi-list"></i>
        </button>
    </div>

    <!-- Menu Mobile -->
    <nav id="mobile-nav-drawer" class="mobile-nav-drawer">
        <ul class="mobile-nav-links">
            <li><a asp-controller="Dashboard" asp-action="Index" data-dismiss="mobile-nav">Painel</a></li>

            <!-- Carteira Mobile -->
            <li class="mobile-dropdown">
                <button class="mobile-dropdown-toggle">Carteira <i class="bi bi-chevron-down"></i></button>
                <ul class="mobile-dropdown-menu">
                    <li><a asp-controller="Receitas" asp-action="Index" data-dismiss="mobile-nav">Receitas</a></li>
                    <li><a asp-controller="Despesas" asp-action="Index" data-dismiss="mobile-nav">Despesas</a></li>
                    <li><a asp-controller="Historico" asp-action="Index" data-dismiss="mobile-nav">Historico</a></li>
                    <li><a asp-controller="Categories" asp-action="Index" data-dismiss="mobile-nav">Categorias</a></li>
                </ul>
            </li>

            <!-- Metas Mobile -->
            <li class="mobile-dropdown">
                <button class="mobile-dropdown-toggle text-success">Metas <i class="bi bi-chevron-down"></i></button>
                <ul class="mobile-dropdown-menu">
                    <li><a asp-controller="Budgets" asp-action="Index" data-dismiss="mobile-nav">Orcamentos</a></li>
                    <li><a asp-controller="MetasFinanceiras" asp-action="Index" data-dismiss="mobile-nav">Objetivos</a></li>
                </ul>
            </li>

            <!-- Relatorios Mobile -->
            <li class="mobile-dropdown">
                <button class="mobile-dropdown-toggle">Relatorios <i class="bi bi-chevron-down"></i></button>
                <ul class="mobile-dropdown-menu">
                    <li><a asp-controller="Relatorios" asp-action="Index" data-dismiss="mobile-nav">Visao Geral</a></li>
                    <li><a asp-controller="TendenciaFinanceira" asp-action="Index" data-dismiss="mobile-nav">Tendencias</a></li>
                </ul>
            </li>

            <!-- Ferramentas Mobile -->
            <li class="mobile-dropdown">
                <button class="mobile-dropdown-toggle">Ferramentas <i class="bi bi-chevron-down"></i></button>
                <ul class="mobile-dropdown-menu">
                    <li><a asp-controller="Ferramentas" asp-action="CalculadoraDeMetas" data-dismiss="mobile-nav">Calculadora</a></li>
                    <li><a asp-controller="Ferramentas" asp-action="JurosCompostos" data-dismiss="mobile-nav">Juros Compostos</a></li>
                    <li><a asp-controller="ConversorEnergias" asp-action="Index" data-dismiss="mobile-nav">Energia</a></li>
                </ul>
            </li>

            <li><a asp-controller="EducacaoFinanceira" asp-action="Index" data-dismiss="mobile-nav">Aprender</a></li>

            @if (User.IsInRole("Administrador"))
            {
                <li><a asp-controller="Usuarios" asp-action="Index" data-dismiss="mobile-nav" class="text-danger">Admin</a></li>
            }
        </ul>
    </nav>

    <button id="header-toggle-tab" class="header-toggle-tab" title="Alternar Menu">
        <i class="bi bi-chevron-up"></i>
    </button>
</header>
