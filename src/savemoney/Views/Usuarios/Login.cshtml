@model savemoney.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">
            <span class="material-icons">login</span>
            Login
        </h2>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <span class="material-icons" style="color: #1976d2;">person</span>
                    </span>
                    <input asp-for="Email" class="form-control border-start-0" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Senha" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <span class="material-icons" style="color: #1976d2;">lock</span>
                    </span>
                    <input asp-for="Senha" class="form-control border-start-0" type="password" />
                </div>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100 mb-2">
                <span class="material-icons" style="vertical-align: middle;">arrow_forward</span>
                Entrar
            </button>
            <p class="text-danger text-center">@ViewBag.Message</p>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Create" class="btn btn-link">
                <span class="material-icons" style="vertical-align: middle;">person_add</span>
                Criar novo usuário
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}