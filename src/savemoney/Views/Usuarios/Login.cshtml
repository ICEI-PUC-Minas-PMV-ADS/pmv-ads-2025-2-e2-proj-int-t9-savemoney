@model savemoney.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaveMoney</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-page">

        <!-- Left Side - Form -->
        <div class="login-left">
            <div class="login-card">
                <div class="login-header">
                    <div class="logo-wrapper">
                        <span class="material-symbols-outlined logo-icon" aria-hidden="true">account_balance_wallet</span>
                        <h1 class="logo-text">SaveMoney</h1>
                    </div>
                    <h2 class="login-title">Bem-vindo de volta</h2>
                    <p class="login-subtitle">Acesse sua conta para gerenciar suas finanças</p>
                </div>

                <form asp-action="Login" id="loginForm" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-danger">
                            <span class="material-symbols-outlined alert-icon" aria-hidden="true">error</span>
                            <span>@ViewBag.Message</span>
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">mail</span>
                            Email
                        </label>
                        <input asp-for="Email"
                               class="form-input"
                               placeholder="seu@email.com"
                               aria-describedby="emailHelp" />
                        <span asp-validation-for="Email" class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Senha" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">lock</span>
                            Senha
                        </label>
                        <div class="password-wrapper">
                            <input asp-for="Senha"
                                   type="password"
                                   class="form-input"
                                   id="passwordInput"
                                   placeholder="••••••••"
                                   aria-describedby="senhaHelp" />
                            <button type="button"
                                    class="password-toggle"
                                    id="togglePassword"
                                    aria-label="Mostrar/ocultar senha">
                                <span class="material-symbols-outlined" aria-hidden="true">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="Senha" class="form-error"></span>
                    </div>

                    <button type="submit" class="btn-submit">
                        <span class="material-symbols-outlined" aria-hidden="true">login</span>
                        Entrar
                    </button>

                    <div class="form-footer">
                        <p>Não tem uma conta?</p>
                        <a asp-action="Create" class="link-primary">
                            <span class="material-symbols-outlined" aria-hidden="true">person_add</span>
                            Criar conta gratuita
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Right Side - Hero -->
        <div class="login-right">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <div class="floating-card card-1">
                    <span class="material-symbols-outlined card-icon" aria-hidden="true">trending_up</span>
                    <div class="card-text">
                        <h3>Controle Total</h3>
                        <p>Gerencie suas finanças em um só lugar</p>
                    </div>
                </div>

                <div class="floating-card card-2">
                    <span class="material-symbols-outlined card-icon" aria-hidden="true">insights</span>
                    <div class="card-text">
                        <h3>Análises Inteligentes</h3>
                        <p>Identifique padrões e oportunidades</p>
                    </div>
                </div>

                <div class="floating-card card-3">
                    <span class="material-symbols-outlined card-icon" aria-hidden="true">savings</span>
                    <div class="card-text">
                        <h3>Metas Financeiras</h3>
                        <p>Alcance seus objetivos com facilidade</p>
                    </div>
                </div>

                <div class="hero-text">
                    <h2 class="hero-title">Transforme sua relação com o dinheiro</h2>
                    <p class="hero-description">
                        Planeje, organize e conquiste seus objetivos financeiros
                        com inteligência e simplicidade.
                    </p>
                </div>
            </div>
        </div>

    </div>

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
