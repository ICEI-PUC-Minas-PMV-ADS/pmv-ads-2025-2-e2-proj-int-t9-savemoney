@model savemoney.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<!-- Modal Overlay -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal-container">

        <!-- Delete Card -->
        <div class="delete-card">

            <!-- Header -->
            <div class="delete-header">
                <div class="header-icon danger">
                    <span class="material-symbols-outlined" aria-hidden="true">delete_forever</span>
                </div>
                <h2 class="delete-title">Excluir Usuário</h2>
                <p class="delete-subtitle">Esta ação não pode ser desfeita!</p>
            </div>

            <!-- Warning Alert -->
            <div class="alert alert-danger">
                <span class="material-symbols-outlined alert-icon" aria-hidden="true">warning</span>
                <div class="alert-content">
                    <strong>Atenção!</strong>
                    <p>Ao excluir este usuário, todos os dados relacionados serão permanentemente removidos do sistema.</p>
                </div>
            </div>

            <!-- User Info -->
            <div class="delete-content">

                <h3 class="section-title">Dados do Usuário</h3>

                <div class="info-grid">

                    <!-- Nome -->
                    <div class="info-item">
                        <div class="info-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">person</span>
                            <span>Nome Completo</span>
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Nome)</div>
                    </div>

                    <!-- Email -->
                    <div class="info-item">
                        <div class="info-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">mail</span>
                            <span>Email</span>
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Email)</div>
                    </div>

                    <!-- Documento -->
                    <div class="info-item">
                        <div class="info-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">badge</span>
                            <span>Documento</span>
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Documento)</div>
                    </div>

                    <!-- Perfil -->
                    <div class="info-item">
                        <div class="info-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">supervisor_account</span>
                            <span>Perfil</span>
                        </div>
                        <div class="info-value">
                            <span class="badge badge-@Model.Perfil.ToString().ToLower()">
                                @Html.DisplayFor(model => model.Perfil)
                            </span>
                        </div>
                    </div>

                    <!-- Tipo de Usuário -->
                    <div class="info-item">
                        <div class="info-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">account_tree</span>
                            <span>Tipo de Usuário</span>
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.TipoUsuario)</div>
                    </div>

                    <!-- Data de Cadastro -->
                    <div class="info-item">
                        <div class="info-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">calendar_today</span>
                            <span>Data de Cadastro</span>
                        </div>
                        <div class="info-value">
                            @Model.DataCadastro.ToString("dd/MM/yyyy 'às' HH:mm")
                        </div>
                    </div>

                </div>

            </div>

            <!-- Footer Actions -->
            <form asp-action="Delete" id="deleteForm" class="delete-footer">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger" id="btnDelete">
                    <span class="material-symbols-outlined" aria-hidden="true">delete</span>
                    Confirmar Exclusão
                </button>

                @if (User.IsInRole("Administrador"))
                {
                    <a asp-action="Index" class="btn btn-secondary">
                        <span class="material-symbols-outlined" aria-hidden="true">arrow_back</span>
                        Cancelar
                    </a>
                }
                else
                {
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <span class="material-symbols-outlined" aria-hidden="true">arrow_back</span>
                        Cancelar
                    </a>
                }
            </form>

        </div>

    </div>
</div>

@section css {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/delete.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/delete.js" asp-append-version="true"></script>
}