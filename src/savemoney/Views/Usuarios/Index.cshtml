@model IEnumerable<savemoney.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow-sm p-4 w-100" style="max-width: 1100px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <span class="material-icons me-2" style="font-size: 40px;">group</span>
                <h1 class="h3 mb-0">Usuários</h1>
            </div>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <span class="material-icons align-middle me-1" style="font-size: 20px;">person_add</span>
                Novo Usuário
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th><span class="material-icons align-middle me-1" style="font-size: 18px;">badge</span> @Html.DisplayNameFor(model => model.Nome)</th>
                        <th><span class="material-icons align-middle me-1" style="font-size: 18px;">email</span> Email</th>
                        <th><span class="material-icons align-middle me-1" style="font-size: 18px;">assignment_ind</span> @Html.DisplayNameFor(model => model.Documento)</th>
                        <th><span class="material-icons align-middle me-1" style="font-size: 18px;">calendar_today</span> @Html.DisplayNameFor(model => model.DataCadastro)</th>
                        <th><span class="material-icons align-middle me-1" style="font-size: 18px;">supervisor_account</span> @Html.DisplayNameFor(model => model.Perfil)</th>
                        <th><span class="material-icons align-middle me-1" style="font-size: 18px;">account_tree</span> @Html.DisplayNameFor(model => model.TipoUsuario)</th>
                        <th class="text-center"><span class="material-icons align-middle" style="font-size: 18px;">settings</span> Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                            <td>@Html.DisplayFor(modelItem => item.DataCadastro)</td>
                            <td>@Html.DisplayFor(modelItem => item.Perfil)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoUsuario)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1" title="Editar">
                                    <span class="material-icons align-middle" style="font-size: 18px;">edit</span>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1 text-white" title="Visualizar">
                                    <span class="material-icons align-middle" style="font-size: 18px;">visibility</span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                    <span class="material-icons align-middle" style="font-size: 18px;">delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>