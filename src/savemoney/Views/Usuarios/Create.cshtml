@model savemoney.Models.Usuario
@{
    ViewData["Title"] = "Criar";
}

<div class="form-container d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="glass-card shadow-sm p-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <span class="material-icons" style="font-size: 48px; color: var(--accent-primary);">person_add</span>
            <h1 class="h3 mb-0 text-primary">Criar Usuário</h1>
        </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label text-primary">
                    <span class="material-icons align-middle me-1" style="font-size: 20px; color: var(--accent-primary);">person</span>
                    Nome
                </label>
                <input asp-for="Nome" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label text-primary">
                    <span class="material-icons align-middle me-1" style="font-size: 20px; color: var(--accent-primary);">email</span>
                    Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Documento" class="form-label text-primary">
                    <span class="material-icons align-middle me-1" style="font-size: 20px; color: var(--accent-primary);">badge</span>
                    Documento
                </label>
                <input asp-for="Documento" class="form-control" placeholder="CPF ou CNPJ" />
                <span asp-validation-for="Documento" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Senha" class="form-label text-primary">
                    <span class="material-icons align-middle me-1" style="font-size: 20px; color: var(--accent-primary);">lock</span>
                    Senha
                </label>
                <input asp-for="Senha" class="form-control" type="password" placeholder="Mínimo 6 caracteres" />
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Perfil" class="form-label text-primary">
                    <span class="material-icons align-middle me-1" style="font-size: 20px; color: var(--accent-primary);">supervisor_account</span>
                    Perfil
                </label>
                <select asp-for="Perfil" class="form-select" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                <span asp-validation-for="Perfil" class="text-danger small"></span>
            </div>

            @if (User.IsInRole("Administrador"))
            {
                <div class="mb-3">
                    <label asp-for="TipoUsuario" class="form-label text-primary">
                        <span class="material-icons align-middle me-1" style="font-size: 20px; color: var(--accent-primary);">account_tree</span>
                        Tipo de Usuário
                    </label>
                    <select asp-for="TipoUsuario" class="form-select" asp-items="Html.GetEnumSelectList<TipoUsuario>()"></select>
                    <span asp-validation-for="TipoUsuario" class="text-danger small"></span>
                </div>
            }

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-success btn-lg">
                    <span class="material-icons align-middle me-1" style="font-size: 20px;">check_circle</span>
                    Criar
                </button>
            </div>

            @if (User.IsInRole("Administrador"))
            {
                <div class="text-center">
                    <a asp-action="Index" class="btn btn-link text-accent-primary">
                        <span class="material-icons align-middle me-1" style="font-size: 20px;">arrow_back</span>
                        Voltar para a lista
                    </a>
                </div>
            }
            else
            {
                <div class="text-center text-primary">
                    Já tem conta? <a asp-action="Login" class="btn btn-link p-0 text-accent-primary">Faça Login</a>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}