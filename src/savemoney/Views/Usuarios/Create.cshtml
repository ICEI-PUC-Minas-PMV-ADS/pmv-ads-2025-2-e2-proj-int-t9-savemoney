@model savemoney.Models.Usuario

@{
    ViewData["Title"] = "Criar Conta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaveMoney</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />
</head>
<body>
    <div class="create-page">

        <!-- Left Side - Form -->
        <div class="create-left">
            <div class="create-card">
                <div class="create-header">
                    <div class="logo-wrapper">
                        <span class="material-symbols-outlined logo-icon" aria-hidden="true">account_balance_wallet</span>
                        <h1 class="logo-text">SaveMoney</h1>
                    </div>
                    <h2 class="create-title">Crie sua conta gratuita</h2>
                    <p class="create-subtitle">Comece a gerenciar suas finanças de forma inteligente</p>
                </div>

                <form asp-action="Create" id="createForm" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Nome -->
                    <div class="form-group">
                        <label asp-for="Nome" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">person</span>
                            Nome Completo
                        </label>
                        <input asp-for="Nome"
                               class="form-input"
                               placeholder="Seu nome completo"
                               aria-describedby="nomeHelp" />
                        <span asp-validation-for="Nome" class="form-error"></span>
                        <small id="nomeHelp" class="form-text">Como devemos chamá-lo?</small>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">mail</span>
                            Email
                        </label>
                        <input asp-for="Email"
                               type="email"
                               class="form-input"
                               placeholder="seu@email.com"
                               aria-describedby="emailHelp" />
                        <span asp-validation-for="Email" class="form-error"></span>
                        <small id="emailHelp" class="form-text">Usaremos para login e notificações</small>
                    </div>

                    <!-- Documento -->
                    <div class="form-group">
                        <label asp-for="Documento" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">badge</span>
                            CPF ou CNPJ
                        </label>
                        <input asp-for="Documento"
                               class="form-input"
                               placeholder="000.000.000-00"
                               maxlength="18"
                               aria-describedby="documentoHelp" />
                        <span asp-validation-for="Documento" class="form-error"></span>
                        <small id="documentoHelp" class="form-text">Apenas números (formatamos automaticamente)</small>
                    </div>

                    <!-- Senha -->
                    <div class="form-group">
                        <label asp-for="Senha" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">lock</span>
                            Senha
                        </label>
                        <div class="password-wrapper">
                            <input asp-for="Senha"
                                   type="password"
                                   class="form-input"
                                   id="passwordInput"
                                   placeholder="Mínimo 6 caracteres"
                                   aria-describedby="senhaHelp" />
                            <button type="button"
                                    class="password-toggle"
                                    id="togglePassword"
                                    aria-label="Mostrar/ocultar senha">
                                <span class="material-symbols-outlined" aria-hidden="true">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="Senha" class="form-error"></span>
                        <div id="senhaHelp" class="password-strength">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <span class="strength-text" id="strengthText">Digite sua senha</span>
                        </div>
                    </div>

                    <!-- Perfil -->
                    <div class="form-group">
                        <label asp-for="Perfil" class="form-label">
                            <span class="material-symbols-outlined label-icon" aria-hidden="true">supervisor_account</span>
                            Perfil
                        </label>
                        <select asp-for="Perfil"
                                class="form-input"
                                asp-items="Html.GetEnumSelectList<Perfil>()"
                                aria-describedby="perfilHelp">
                        </select>
                        <span asp-validation-for="Perfil" class="form-error"></span>
                        <small id="perfilHelp" class="form-text">Escolha seu nível de acesso</small>
                    </div>

                    <!-- Tipo de Usuário (Admin only) -->
                    @if (User.IsInRole("Administrador"))
                    {
                        <div class="form-group">
                            <label asp-for="TipoUsuario" class="form-label">
                                <span class="material-symbols-outlined label-icon" aria-hidden="true">account_tree</span>
                                Tipo de Usuário
                            </label>
                            <select asp-for="TipoUsuario"
                                    class="form-input"
                                    asp-items="Html.GetEnumSelectList<TipoUsuario>()">
                            </select>
                            <span asp-validation-for="TipoUsuario" class="form-error"></span>
                        </div>
                    }

                    <!-- Termos de Uso -->
                    <div class="form-group terms-group">
                        <p class="terms-notice">
                            Ao criar sua conta, você concorda com nossos
                            <a href="#" onclick="abrirModalTermos(event)" class="terms-link">
                                <span class="material-symbols-outlined" aria-hidden="true">gavel</span>
                                Termos de Uso
                            </a>
                        </p>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn-submit">
                        <span class="material-symbols-outlined" aria-hidden="true">check_circle</span>
                        Criar Conta
                    </button>

                    <!-- Footer -->
                    <div class="form-footer">
                        <p>Já tem uma conta?</p>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Index" class="link-primary">
                                <span class="material-symbols-outlined" aria-hidden="true">arrow_back</span>
                                Voltar para a lista
                            </a>
                        }
                        else
                        {
                            <a asp-action="Login" class="link-primary">
                                <span class="material-symbols-outlined" aria-hidden="true">login</span>
                                Fazer login
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <!-- Right Side - Hero -->
        <div class="create-right">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <div class="floating-card card-1">
                    <span class="material-symbols-outlined card-icon" aria-hidden="true">security</span>
                    <div class="card-text">
                        <h3>100% Seguro</h3>
                        <p>Seus dados protegidos com criptografia</p>
                    </div>
                </div>

                <div class="floating-card card-2">
                    <span class="material-symbols-outlined card-icon" aria-hidden="true">rocket_launch</span>
                    <div class="card-text">
                        <h3>Comece em Minutos</h3>
                        <p>Configure sua conta rapidamente</p>
                    </div>
                </div>

                <div class="floating-card card-3">
                    <span class="material-symbols-outlined card-icon" aria-hidden="true">workspace_premium</span>
                    <div class="card-text">
                        <h3>Recursos Premium</h3>
                        <p>Acesso completo a todas ferramentas</p>
                    </div>
                </div>

                <div class="hero-text">
                    <h2 class="hero-title">Junte-se a milhares de usuários</h2>
                    <p class="hero-description">
                        Organize suas finanças, defina metas e alcance a liberdade
                        financeira com as ferramentas certas ao seu lado.
                    </p>

                    <div class="stats-grid">
                        <div class="stat-item">
                            <span class="stat-number">10k+</span>
                            <span class="stat-label">Usuários ativos</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">500k+</span>
                            <span class="stat-label">Transações</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">98%</span>
                            <span class="stat-label">Satisfação</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @* Modal de Termos de Uso
    <partial name="_TermosDeUso" /> *@

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/create.js" asp-append-version="true"></script>
</body>
</html>
