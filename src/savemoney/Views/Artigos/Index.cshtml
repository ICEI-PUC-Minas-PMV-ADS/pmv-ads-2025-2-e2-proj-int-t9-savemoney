@{
    ViewData["Title"] = "Artigos sobre Educação Financeira";
}

@* --- ESTILOS DA PÁGINA --- *@

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
@* Importa a fonte Manrope e os ícones Material Symbols *@
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" rel="stylesheet" />
<link rel="stylesheet" href="~/css/artigos.css" asp-append-version="true" />

@* --- FIM DOS ESTILOS --- *@


@* Imagem de fundo - Definida via CSS para melhor controle e facilidade de troca *@
<div class="background-fixed-image" aria-hidden="true"></div>


<main class="content-wrapper">
    <div class="container-artigos">
        <div class="header-artigos">
            <h1>Artigos Academicos</h1>
            <p>
                Explore pesquisas acadêmicas focadas em finanças pessoais, investimentos e economia comportamental. (Fonte: <a href="https://openalex.org/" target="_blank" rel="noopener noreferrer">OpenAlex</a>)
            </p>
        </div>

        @* Formulário de Busca para melhor acessibilidade e controle (Enter) *@
        <form id="form-busca" class="filter-bar glass-effect" onsubmit="return false;">
            <div class="filter-grid">
                <div class="filter-search">
                    <span class="material-symbols-outlined icon-search">search</span>
                    <input type="text" id="filtro-texto" class="input-style" placeholder="Digite palavras-chave..." />
                </div>

                @* NOVO: Filtro de Região *@
                <div class="filter-region">
                    <select id="filtro-regiao" class="select-style">
                        <option value="BR">Brasil</option>
                        <option value="GLOBAL">Global</option>
                    </select>
                </div>

                <div class="filter-sort">
                    <select id="filtro-ordem" class="select-style">
                        <option value="relevance">Relevância (Citações)</option>
                        <option value="newest">Mais Recentes</option>
                    </select>
                </div>

                @* NOVO: Botão de Ação *@
                 <div class="filter-button-container">
                    <button type="submit" id="btn-pesquisar" class="btn-action">
                        Pesquisar
                    </button>
                </div>
            </div>
        </form>

        <div id="artigos-container" class="artigos-grid">
            @* Os artigos serão carregados aqui *@
        </div>

        @* Contêiner de Loading (agora fora do grid principal) *@
        <div class="loading-container" id="loading-spinner" style="display: none;">
            <div class="spinner"></div>
            <p>Carregando...</p>
        </div>

         <div id="status-message-container" style="display: none;">
            <div id="status-message" class="status-message"></div>
         </div>
        
         @* NOVO: Contêiner de Paginação *@
        <div class="pagination-container" id="pagination-container" style="display: none;">
             <button id="btn-exibir-mais" class="btn-action btn-show-more">
                Exibir Mais Artigos
            </button>
        </div>

    </div>
</main>

@section Scripts {
    <script src="~/js/artigos.js" asp-append-version="true"></script>
}