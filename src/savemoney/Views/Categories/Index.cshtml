@model IEnumerable<savemoney.Models.Category>
@{
    ViewData["Title"] = "Minhas Categorias";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>@ViewData["Title"]</h3>
        <a asp-action="Create" class="btn btn-success">
            + Nova Categoria
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <p class="text-muted">Você ainda não criou nenhuma categoria personalizada.</p>
            <a asp-action="Create" class="btn btn-outline-success">Criar primeira categoria</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td>@cat.Name</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-primary">
                                    Editar
                                </a>
                                <form asp-action="Delete" asp-route-id="@cat.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Tem certeza que deseja excluir a categoria @cat.Name?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Excluir
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>