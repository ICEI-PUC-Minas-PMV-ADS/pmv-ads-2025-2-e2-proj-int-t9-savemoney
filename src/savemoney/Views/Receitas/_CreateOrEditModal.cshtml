@model savemoney.Models.Receita
@using savemoney.Models

<div class="modal fade" id="receitaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Receitas"
                  asp-action="@(Model.Id == 0 ? "Create" : "Edit")"
                  method="post">

                @if (Model.Id != 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-cash-coin"></i>
                        @(Model.Id == 0 ? "Nova Receita" : "Editar Receita")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" placeholder="Ex: Salário, Hora Extra..." />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Valor" class="form-label"></label>
                            <div class="input-group">
                                <span id="currencySymbol" class="input-group-text">R$</span>
                                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CurrencyType" class="form-label"></label>
                        <select asp-for="CurrencyType" id="currencyType" class="form-select">
                            <option value="BRL">Real(BRL)</option>
                            <option value="USD">Dolar(USD)</option>
                            <option value="EUR">Euro(EUR)</option>
                            <option value="GBP">Libra (GBP)</option>
                            <option value="JPY">Iene (JPY)</option>
                        </select>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="DataInicio" class="form-label"></label>
                            <input type="date" asp-for="DataInicio" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DataFim" class="form-label"></label>
                            <input type="date" asp-for="DataFim" class="form-control" />
                        </div>
                    </div>
                    
                    <!-- RECORRÊNCIA -->
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsRecurring" class="form-check-input" type="checkbox" role="switch" id="isRecurringSwitch" />
                        <label class="form-check-label fw-bold" asp-for="IsRecurring">
                            Esta receita é recorrente?
                        </label>
                    </div>

                    <div class="row g-3" id="recurrenceOptions" style="display: @(Model.IsRecurring ? "flex" : "none");">
                        <div class="col-md-6">
                            <label class="form-label">Frequência</label>
                            <select asp-for="RecurrenceType" asp-items="Html.GetEnumSelectList<Receita.RecurrenceType>()" class="form-select">
                                <option value="">Selecione...</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RecurrenceCount" class="form-label">Quantas vezes?</label>
                            <input asp-for="RecurrenceCount" class="form-control" type="number" min="1" max="365" placeholder="Ex: 12 parcelas" />
                        </div>
                    </div>
                    
                    <div class="form-check mt-3">
                        <input asp-for="Recebido" class="form-check-input" />
                        <label asp-for="Recebido" class="form-check-label"></label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const chk = document.querySelector("input[name='IsRecurring']");
        const div = document.getElementById("recurrenceOptions");

        chk.addEventListener("change", function () {
            if (this.checked) {
                div.style.display = "flex";
            } else {
                div.style.display = "none";
            }
        });
    });

    const symbolMap = {
        "BRL": "R$",
        "USD": "$",
        "EUR": "€",
        "GBP": "£",
        "JPY": "¥"
    };

    document.getElementById("currencyType").addEventListener("change", function () {
        const selected = this.value;
        document.getElementById("currencySymbol").textContent = symbolMap[selected] || "";
    });

    // Atualiza ao carregar a página (ex: em modo EDIT)
    window.addEventListener("load", function () {
        const selected = document.getElementById("currencyType").value;
        document.getElementById("currencySymbol").textContent = symbolMap[selected] || "";
    });
</script>