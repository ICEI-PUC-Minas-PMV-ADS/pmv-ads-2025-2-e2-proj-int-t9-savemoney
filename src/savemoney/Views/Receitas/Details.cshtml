@model savemoney.Models.Receita

@{
    ViewData["Title"] = "Detalhes da Receita";
}

<h1>Detalhes da Receita</h1>

<div>

    <h4>Receitas</h4>
    <hr /> 
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">@Model.Valor.ToString("C")</dd>
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>
        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
    </dl>

</div>

<p>
    <a asp-action="Edit" aso-route-id="@Model.Id" ckass="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
