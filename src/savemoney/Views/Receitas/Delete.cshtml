@model savemoney.Models.Receita

@{
    ViewData["Title"] = "Excluir Receita";
}

<h1>Excluir Receita</h1>

<h3>Tem certeza que deseja excluir está receita?</h3>

<div>
    <h4>Receita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt><dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Valor</dt><dd class="col-sm-10">@Model.Valor.ToString("C")</dd>
        <dt class="col-sm-2">Data</dt><dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>
    </<dl>
   
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" /> 
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>