@model savemoney.Models.Receita

<div class="modal fade" id="editReceitaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Editar Receita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="form-edit-receita">
                <div class="modal-body">

                    <input type="hidden" asp-for="Id" />
                
                    <div class="mb-3">
                        <label class="form-label">Titulo</label>
                        <input asp-for="Titulo" class="form-control" type="number" step="0.01" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Valor</label>
                        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DataInicio" class="form-label"></label>
                        <input asp-for="DataInicio" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DataFim" class="form-label"></label>
                        <input asp-for="DataFim" class="form-control" type="date" />
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsRecurring" class="form-check-input" />
                        <label asp-for="IsRecurring" class="form-check-label"></label>
                    </div>

                    <div class="row" id="recurrenceOptions" style="display:@(Model.IsRecurring ? "flex" : "none");">
                        <div class="col">
                            <label asp-for="Recurrence" class="form-label"></label>
                            <select asp-for="Recurrence" class="form-select">
                                <option value="">Selecione...</option>
                                <option value="Daily">Diária</option>
                                <option value="Weekly">Semanal</option>
                                <option value="Monthly">Mensal</option>
                                <option value="Yearly">Anual</option>
                            </select>
                        </div>
                        <div class="col">
                            <label asp-for="RecurrenceCount" class="form-label"></label>
                            <input asp-for="RecurrenceCount" class="form-control" type="number" min="1" max="365" />
                        </div>
                    </div>

                    <div class="form-check mt-3">
                        <input asp-for="Recebido" class="form-check-input" />
                        <label asp-for="Recebido" class="form-check-label"></label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>

            </form>

        </div>
    </div>
</div>

<script>
    // Quando o formulário for enviado
    $('#form-edit-receita').on('submit', function (e) {
        e.preventDefault();

        $.ajax({
            url: '/Receitas/Edit/' + $('#Id').val(),
            method: 'POST',
            data: $(this).serialize(),
            success: function () {
                location.reload();
            },
            error: function () {
                alert("Erro ao salvar edição.");
            }
        });
    });

       document.addEventListener("DOMContentLoaded", function () {
        const chk = document.querySelector("input[name='IsRecurring']");
        const div = document.getElementById("recurrenceOptions");

        chk.addEventListener("change", function () {
            if (this.checked) {
                div.style.display = "flex";
            } else {
                div.style.display = "none";
            }
        });
    });
</script>
