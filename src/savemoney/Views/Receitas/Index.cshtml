@model IEnumerable<savemoney.Models.Receita>

@{
    ViewData["Title"] = "Minhas Receitas";

    var totalRecebido = Model.Where(r => r.Recebido).Sum(r => r.Valor);
    var totalPendente = Model.Where(r => !r.Recebido).Sum(r => r.Valor);
}

@section css {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/receitas.css" asp-append-version="true" />
}

<main class="receitas-page-main fade-in">

    <!-- Page Header -->
    <header class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <span class="material-symbols-outlined page-icon" aria-hidden="true">payments</span>
                Receitas
            </h1>
            <p class="page-subtitle">Gerencie suas fontes de renda e entradas financeiras</p>
        </div>
        <button class="btn-action btn-success"
                id="btnNovaReceita"
                aria-label="Criar nova receita">
            <span class="material-symbols-outlined" aria-hidden="true">add</span>
            Nova Receita
        </button>
    </header>

    <!-- Stats Cards -->
    <section class="stats-section" aria-label="Resumo financeiro">
        <div class="stats-grid">
            <article class="stat-card glass-panel">
                <div class="stat-icon stat-icon-success">
                    <span class="material-symbols-outlined" aria-hidden="true">trending_up</span>
                </div>
                <div class="stat-info">
                    <span class="stat-label">Recebido Total</span>
                    <span class="stat-value value-success">@totalRecebido.ToString("C")</span>
                </div>
            </article>

            <article class="stat-card glass-panel">
                <div class="stat-icon stat-icon-warning">
                    <span class="material-symbols-outlined" aria-hidden="true">schedule</span>
                </div>
                <div class="stat-info">
                    <span class="stat-label">Pendente</span>
                    <span class="stat-value value-warning">@totalPendente.ToString("C")</span>
                </div>
            </article>
        </div>
    </section>

    <!-- Info Banner -->
    <div class="alert alert-info">
        <span class="material-symbols-outlined alert-icon" aria-hidden="true">lightbulb</span>
        <div class="alert-content">
            <h3 class="alert-title">Dica Financeira</h3>
            <p class="alert-text">
                Separe suas receitas fixas (salário) das variáveis (vendas/freelas)
                usando a opção "Recorrente" para projeções mais precisas.
            </p>
        </div>
    </div>

    <!-- Content -->
    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="empty-state">
            <span class="material-symbols-outlined empty-icon" aria-hidden="true">account_balance_wallet</span>
            <h2>Nenhuma receita lançada</h2>
            <p>Comece adicionando seu salário ou outras fontes de renda</p>
            <button class="btn-action btn-primary" id="btnNovaReceitaEmpty">
                <span class="material-symbols-outlined" aria-hidden="true">add</span>
                Adicionar Agora
            </button>
        </div>
    }
    else
    {
        <!-- Cards Grid -->
        <div class="receitas-grid" role="list">
            @foreach (var receita in Model)
            {
                <article class="receita-card glass-panel" role="listitem">
                    <div class="card-header">
                        <div class="card-title-group">
                            <h2 class="card-title">@receita.Titulo</h2>
                            <span class="card-date">
                                <span class="material-symbols-outlined" aria-hidden="true">calendar_today</span>
                                @receita.DataInicio.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                        <div class="card-actions">
                            <button class="btn-icon"
                                    data-action="edit"
                                    data-id="@receita.Id"
                                    aria-label="Editar receita @receita.Titulo">
                                <span class="material-symbols-outlined" aria-hidden="true">edit</span>
                            </button>
                            <button class="btn-icon btn-icon-danger"
                                    data-action="delete"
                                    data-id="@receita.Id"
                                    data-titulo="@receita.Titulo"
                                    aria-label="Excluir receita @receita.Titulo">
                                <span class="material-symbols-outlined" aria-hidden="true">delete</span>
                            </button>
                        </div>
                    </div>

                    <div class="card-amount">
                        <span class="amount-currency">@receita.CurrencyType</span>
                        <span class="amount-value">@receita.Valor.ToString("N2")</span>
                    </div>

                    <div class="card-footer">
                        <div class="card-meta">
                            @if (receita.IsRecurring)
                            {
                                <div class="meta-tag">
                                    <span class="material-symbols-outlined" aria-hidden="true">sync</span>
                                    <span>Recorrente</span>
                                </div>
                            }
                        </div>

                        <div class="status-badge @(receita.Recebido ? "status-success" : "status-warning")">
                            <span class="status-dot"></span>
                            @(receita.Recebido ? "Recebido" : "Pendente")
                        </div>
                    </div>
                </article>
            }
        </div>
    }

</main>

<!-- Modal Container -->
<div id="modal-container"></div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-panel modal-danger">
            <div class="modal-header-custom">
                <div class="modal-icon-danger">
                    <span class="material-symbols-outlined" aria-hidden="true">warning</span>
                </div>
                <h2 id="deleteModalTitle" class="modal-title-custom">Excluir Receita?</h2>
                <p class="modal-subtitle-custom">Esta ação é permanente e não pode ser desfeita</p>
            </div>
            <div class="modal-body-custom">
                <p class="delete-confirmation-text">
                    Você está prestes a excluir: <strong id="delete-titulo"></strong>
                </p>
                <input type="hidden" id="delete-id" />
            </div>
            <div class="modal-footer-custom">
                <button type="button" class="btn-action btn-secondary" data-bs-dismiss="modal">
                    <span class="material-symbols-outlined" aria-hidden="true">close</span>
                    Cancelar
                </button>
                <button type="button" class="btn-action btn-danger" id="confirm-delete-btn">
                    <span class="material-symbols-outlined" aria-hidden="true">delete_forever</span>
                    Confirmar Exclusão
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/receitas.js" asp-append-version="true"></script>
}