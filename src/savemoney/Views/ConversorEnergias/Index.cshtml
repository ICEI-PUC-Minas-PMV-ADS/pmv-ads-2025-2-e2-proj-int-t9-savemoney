@model IEnumerable<savemoney.Models.ConversorEnergia>

@{
    ViewData["Title"] = "Conversor de Energia";
    var hasData = Model != null && Model.Any();
}

@section css {
    <link rel="stylesheet" href="~/css/conversor.css" asp-append-version="true" />
}

<div class="conversor-page-main fade-in">

    <!-- Cabeçalho -->
    <header class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-lightning-charge-fill" aria-hidden="true"></i>
                Conversor de Energia
            </h1>
            <p class="page-subtitle">Calcule consumo e custo com base nas tarifas da sua região.</p>
        </div>
    </header>

    <!-- Botão de ação principal -->
    <div class="action-button-container">
        <button class="btn-action btn-primary btn-lg"
                onclick="carregarModalCriar()"
                aria-label="Iniciar novo cálculo de conversão">
            <i class="bi bi-plus-lg" aria-hidden="true"></i>
            <span>Iniciar Novo Cálculo</span>
        </button>
    </div>

    <!-- Como funciona -->
    <section class="info-panel glass-panel" aria-labelledby="info-title">
        <h2 id="info-title" class="info-title">
            <i class="bi bi-lightbulb" aria-hidden="true"></i>
            Como funciona o conversor?
        </h2>
        <ol class="info-list">
            <li class="info-item">
                <div class="info-icon" aria-hidden="true">
                    <i class="bi bi-1-circle-fill"></i>
                </div>
                <div class="info-content">
                    <strong>Entrada de Dados:</strong> Informe a potência em Watts (ex: 5500W) ou o custo mensal em Reais, junto com tempo de uso diário e localização.
                </div>
            </li>
            <li class="info-item">
                <div class="info-icon" aria-hidden="true">
                    <i class="bi bi-2-circle-fill"></i>
                </div>
                <div class="info-content">
                    <strong>Processamento Inteligente:</strong> O sistema calcula automaticamente o consumo mensal em kWh e o custo, considerando tarifas por estado e bandeira tarifária.
                </div>
            </li>
            <li class="info-item">
                <div class="info-icon" aria-hidden="true">
                    <i class="bi bi-3-circle-fill"></i>
                </div>
                <div class="info-content">
                    <strong>Resultados e Dicas:</strong> Receba análise completa do consumo e sugestões personalizadas de economia baseadas no seu perfil de uso.
                </div>
            </li>
        </ol>
    </section>

    <!-- Histórico de conversões -->
    @if (hasData)
    {
        <section class="conversions-section" aria-labelledby="history-title">
            <h2 id="history-title" class="section-title">
                <i class="bi bi-clock-history" aria-hidden="true"></i>
                Histórico de Conversões Salvas
            </h2>

            <div class="conversions-grid" role="list">
                @foreach (var item in Model)
                {
                    <article class="conversion-card glass-panel" role="listitem">
                        <!-- Cabeçalho do card -->
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="bi bi-plug-fill" aria-hidden="true"></i>
                                @item.TipoDispositivo
                            </h3>
                            <div class="card-actions">
                                <button class="btn-icon"
                                        onclick="carregarModalEditar(@item.Id)"
                                        title="Editar conversão"
                                        aria-label="Editar conversão de @item.TipoDispositivo">
                                    <i class="bi bi-pencil-fill" aria-hidden="true"></i>
                                </button>
                                <a class="btn-icon"
                                   asp-action="Details"
                                   asp-route-id="@item.Id"
                                   title="Ver detalhes"
                                   aria-label="Ver detalhes da conversão de @item.TipoDispositivo">
                                    <i class="bi bi-search" aria-hidden="true"></i>
                                </a>
                                <button class="btn-icon danger"
                                        onclick="carregarModalExcluir(@item.Id)"
                                        title="Excluir conversão"
                                        aria-label="Excluir conversão de @item.TipoDispositivo">
                                    <i class="bi bi-trash-fill" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Corpo do card -->
                        <dl class="card-details">
                            <div class="detail-row">
                                <dt>Valor Base:</dt>
                                <dd>@item.ValorBase @item.TipoValor</dd>
                            </div>
                            <div class="detail-row">
                                <dt>Tempo de Uso:</dt>
                                <dd>@item.TempoUso h/dia</dd>
                            </div>
                            <div class="detail-row">
                                <dt>Consumo Mensal:</dt>
                                <dd class="highlight-success">@(item.ConsumoMensal?.ToString("F2") ?? "N/A") kWh</dd>
                            </div>
                            <div class="detail-row">
                                <dt>Custo Mensal:</dt>
                                <dd class="highlight-danger">@(item.CustoMensal?.ToString("C") ?? "N/A")</dd>
                            </div>
                            <div class="detail-row">
                                <dt>Estado / Bandeira:</dt>
                                <dd>@item.Estado / @item.BandeiraTarifaria</dd>
                            </div>
                        </dl>
                    </article>
                }
            </div>
        </section>
    }
    else
    {
        <!-- Estado vazio -->
        <div class="empty-state glass-panel">
            <div class="empty-icon" aria-hidden="true">
                <i class="bi bi-lightning-charge-slash-fill"></i>
            </div>
            <h2>Nenhuma conversão foi realizada ainda</h2>
            <p>Use o botão "Iniciar Novo Cálculo" para criar sua primeira simulação e descobrir quanto seus aparelhos consomem e custam mensalmente.</p>
        </div>
    }
</div>

<!-- Container para modais dinâmicos -->
<div id="modal-container"></div>

@section Scripts {
    <script src="~/js/conversor.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}