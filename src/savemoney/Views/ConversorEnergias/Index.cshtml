@model IEnumerable<savemoney.Models.ConversorEnergia>

@{
    ViewData["Title"] = "Conversor de Energia";
    var hasData = Model != null && Model.Any();
}

<link rel="stylesheet" href="~/css/conversor.css" asp-append-version="true" />
<div id="modal-container"></div>

<div class="premium-container fade-in">

    <header class="page-header text-center mb-5">
        <h1 class="page-title text-white fw-bolder" style="font-size: 3rem;">
            <i class="bi bi-lightning-charge-fill me-3 text-info"></i>
            Conversor de Energia
        </h1>
        <p class="page-subtitle text-secondary">Calcule, compare e economize com base nas tarifas da sua região.</p>
    </header>

    <div class="d-flex justify-content-center mb-5">
        <button class="btn btn-premium-purple btn-lg fw-bold" onclick="carregarModalCriar()">
            <i class="bi bi-plus-lg me-2"></i>
            <span>Iniciar Novo Cálculo</span>
        </button>
    </div>

    <div class="glass-panel p-5 mb-5 mx-auto" style="max-width: 850px;">
        <h4 class="text-white fw-bold mb-4 border-bottom border-secondary border-opacity-25 pb-3">
            <i class="bi bi-lightbulb me-2 text-warning"></i>
            Como funciona o conversor?
        </h4>
        <ul class="list-unstyled text-start text-primary mx-auto" style="max-width: 600px;">
            <li class="mb-3 d-flex align-items-start">
                <i class="bi bi-1-circle-fill me-3 mt-1 text-success fs-5"></i>
                <div>
                    <span class="text-white fw-bold">Entrada de Dados:</span> Informe o valor base (kWh ou R$) e os detalhes de consumo (aparelho, tempo de uso, localização).
                </div>
            </li>
            <li class="mb-3 d-flex align-items-start">
                <i class="bi bi-2-circle-fill me-3 mt-1 text-success fs-5"></i>
                <div>
                    <span class="text-white fw-bold">Processamento Inteligente:</span> O sistema usa a tarifa padrão para converter os valores e estimar o custo/consumo mensal.
                </div>
            </li>
            <li class="d-flex align-items-start">
                <i class="bi bi-3-circle-fill me-3 mt-1 text-success fs-5"></i>
                <div>
                    <span class="text-white fw-bold">Resultados e Dicas:</span> Receba o cálculo final e sugestões personalizadas de economia (ex: simulação solar).
                </div>
            </li>
        </ul>
    </div>

    @if (hasData)
    {
        <h2 class="mt-4 mb-4 text-center text-white">
            <i class="bi bi-clock-history me-2 text-secondary"></i>
            Histórico de Conversões Salvas
        </h2>
        <div class="row row-cols-1 row-cols-lg-2 g-4 justify-content-center" style="max-width: 1100px; margin: 0 auto;">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="glass-card p-4 h-100">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="text-white card-title fw-bold">
                                <i class="bi bi-plug-fill me-2 text-primary"></i>
                                @item.TipoDispositivo (@item.Estado)
                            </h5>
                            <div class="d-flex gap-2">
                                <button class="btn btn-icon" onclick="carregarModalEditar(@item.Id)" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                                <a class="btn btn-icon text-info" asp-action="Details" asp-route-id="@item.Id" title="Detalhes do Cálculo">
                                    <i class="bi bi-search"></i>
                                </a>
                                <button class="btn btn-icon danger" onclick="carregarModalExcluir(@item.Id)" title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </div>
                        </div>

                        <div class="details-list text-muted">
                            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                <strong>Valor Base (R$/kWh):</strong> <span>@item.ValorBase @item.TipoValor</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                <strong>Consumo Estimado:</strong>
                                <span class="text-success fw-bold">@(item.ConsumoMensal?.ToString("F2") ?? "N/A") kWh</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                <strong>Modalidade:</strong> <span>@item.Modalidade</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <strong>Bandeira:</strong> <span>@item.BandeiraTarifaria</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="glass-panel text-center mt-5 p-5 mx-auto" style="max-width: 600px;">
            <div style="font-size: 4rem; color: var(--accent-primary);" class="mb-3">
                <i class="bi bi-lightning-charge-slash-fill"></i>
            </div>
            <h4 class="text-white fw-bold mb-2">Nenhuma conversão foi realizada ainda.</h4>
            <p class="text-secondary mx-auto" style="max-width: 80%;">
                Use o botão **"Iniciar Novo Cálculo"** para criar sua primeira simulação, comparar custos e receber dicas de economia personalizadas.
            </p>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/conversor.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}