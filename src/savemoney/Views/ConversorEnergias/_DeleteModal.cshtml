@model savemoney.Models.ConversorEnergia

<div class="modal-header">
    <h2 class="modal-title-warning">Confirmar Exclusão</h2>
    <button type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Fechar"></button>
</div>

<div class="modal-body text-center">
    <div class="modal-icon-warning" aria-hidden="true">
        <i class="bi bi-exclamation-triangle-fill"></i>
    </div>
    <h3 class="modal-subtitle-warning">Excluir este Cálculo?</h3>
    <p class="modal-text-secondary">
        O registro de <strong>@Model.TipoDispositivo (@Model.ValorBase @Model.TipoValor)</strong> será removido permanentemente. Esta ação não pode ser desfeita.
    </p>

    <form asp-action="DeleteConfirmed"
          asp-route-id="@Model.Id"
          method="post"
          id="formDelete">
        @Html.AntiForgeryToken()

        <div class="modal-actions">
            <button type="button"
                    class="btn-action btn-secondary"
                    data-bs-dismiss="modal">
                Cancelar
            </button>
            <button type="submit" class="btn-action btn-danger">
                Excluir Definitivamente
            </button>
        </div>
    </form>
</div>