@{
    ViewData["Title"] = "Notícias do Mercado Financeiro";
}

@section css {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/noticias.css" asp-append-version="true" />
}

<div class="background-fixed-image" aria-hidden="true"></div>

<main class="noticias-page-main fade-in">

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Notícias do Mercado Financeiro</h1>
            <p class="hero-subtitle">
                Fique atualizado com notícias em tempo real do mundo financeiro e econômico
            </p>

            <!-- Search -->
            <div class="search-container">
                <span class="material-symbols-outlined search-icon" aria-hidden="true">search</span>
                <input type="search"
                       class="search-input"
                       id="searchInput"
                       placeholder="Pesquisar notícias..."
                       aria-label="Pesquisar notícias">
            </div>
        </div>
    </section>

    <!-- Notícias Container -->
    <div class="noticias-container-wrapper">
        <div id="noticias-container"
             class="noticias-grid"
             role="list"
             aria-live="polite"
             aria-busy="false">
            <!-- Cards serão inseridos aqui via JavaScript -->
        </div>

        <!-- Loading State -->
        <div id="loading-state" class="loading-state" style="display: none;">
            <div class="spinner"></div>
            <p>Carregando notícias...</p>
        </div>

        <!-- Botão Carregar Mais -->
        <div class="load-more-container">
            <button id="btnCarregarMais"
                    class="btn-action btn-primary"
                    aria-label="Carregar mais notícias">
                <span class="material-symbols-outlined" aria-hidden="true">add</span>
                Carregar Mais Notícias
            </button>
        </div>
    </div>

</main>

@section Scripts {
    <script src="~/js/noticias.js" asp-append-version="true"></script>
}