@model savemoney.Models.MetaFinanceira

@{
    ViewData["Title"] = "Detalhes da Meta";
}

@section css {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/metasFinanceiras.css" asp-append-version="true" />
}

<main class="metas-page-main fade-in">

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <span class="material-symbols-outlined" aria-hidden="true">check_circle</span>
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Fechar mensagem">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <span class="material-symbols-outlined" aria-hidden="true">error</span>
            <span>@TempData["ErrorMessage"]</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()" aria-label="Fechar mensagem">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
    }

    <!-- Page Header -->
    <header class="page-header">
        <div class="header-content">
            <h1 class="page-title">@Model.Titulo</h1>
            @if (!string.IsNullOrEmpty(Model.Descricao))
            {
                <p class="page-subtitle">@Model.Descricao</p>
            }
        </div>
        <div class="header-actions">
            <a asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn-action btn-secondary"
               aria-label="Editar meta">
                <span class="material-symbols-outlined" aria-hidden="true">edit</span>
                Editar
            </a>
            <a asp-action="Delete"
               asp-route-id="@Model.Id"
               class="btn-action btn-danger"
               aria-label="Remover meta">
                <span class="material-symbols-outlined" aria-hidden="true">delete</span>
                Remover
            </a>
        </div>
    </header>

    <div class="details-grid">
        <!-- Coluna Esquerda: Informações e Progresso -->
        <div class="details-column">
            <section class="info-card glass-panel">
                <h2 class="card-section-title">Informações da Meta</h2>

                <dl class="info-list">
                    <div class="info-item">
                        <dt>Valor Objetivo</dt>
                        <dd class="value-highlight">@Model.ValorObjetivo.ToString("C")</dd>
                    </div>
                    <div class="info-item">
                        <dt>Valor Atual</dt>
                        <dd class="value-highlight value-success">@Model.ValorAtual.ToString("C")</dd>
                    </div>
                    <div class="info-item">
                        <dt>Data Limite</dt>
                        <dd>@(Model.DataLimite.HasValue? Model.DataLimite.Value.ToString("dd/MM/yyyy") : "Sem prazo definido")</dd>
                    </div>
                    <div class="info-item">
                        <dt>Status</dt>
                        <dd>
                            @if (Model.EstaConcluida)
                            {
                                <span class="badge badge-success">
                                    <span class="badge-dot"></span>
                                    Meta Concluída
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-primary">
                                    <span class="badge-dot"></span>
                                    Em Progresso
                                </span>
                            }
                        </dd>
                    </div>
                </dl>

                <div class="progress-section progress-large">
                    <div class="progress-header">
                        <span class="progress-label">Progresso Total</span>
                        <span class="progress-percentage progress-percentage-large">@((Model.Progresso * 100).ToString("0"))%</span>
                    </div>
                    <div class="progress-bar-container" role="progressbar"
                         aria-valuenow="@((Model.Progresso * 100).ToString("0"))"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         aria-label="Progresso da meta: @((Model.Progresso * 100).ToString("0")) porcento">
                        <div class="progress-bar-fill @(Model.EstaConcluida ? "completed" : "")"
                             style="width: @((Model.Progresso * 100).ToString("0.##").Replace(",", "."))%">
                        </div>
                    </div>
                    @if (Model.EstaConcluida)
                    {
                        <p class="progress-message success">
                            <span class="material-symbols-outlined" aria-hidden="true">celebration</span>
                            Parabéns! Você atingiu sua meta!
                        </p>
                    }
                    else
                    {
                        var faltante = Model.ValorObjetivo - Model.ValorAtual;
                        <p class="progress-message">
                            Faltam <strong>@faltante.ToString("C")</strong> para atingir seu objetivo
                        </p>
                    }
                </div>
            </section>

            <!-- Formulário de Aporte -->
            <section class="aporte-card glass-panel">
                <h2 class="card-section-title">
                    <span class="material-symbols-outlined" aria-hidden="true">add_circle</span>
                    Registrar Novo Aporte
                </h2>

                @if (Model.EstaConcluida)
                {
                    <div class="alert alert-info">
                        <span class="material-symbols-outlined" aria-hidden="true">info</span>
                        <span>Meta concluída! Novos aportes continuarão sendo registrados.</span>
                    </div>
                }

                <form asp-action="RegistrarAporte" method="post" class="aporte-form">
                    <input type="hidden" name="MetaFinanceiraId" value="@Model.Id" />

                    <div class="form-group">
                        <label for="ValorAporte" class="form-label">Valor do Aporte</label>
                        <div class="input-currency">
                            <span class="currency-symbol">R$</span>
                            <input type="number"
                                   step="0.01"
                                   min="0.01"
                                   class="form-input"
                                   id="ValorAporte"
                                   name="ValorAporte"
                                   placeholder="0,00"
                                   required
                                   aria-describedby="aporteHelp">
                        </div>
                        <small id="aporteHelp" class="form-text">Informe o valor que deseja aportar nesta meta</small>
                    </div>

                    <button type="submit" class="btn-action btn-success w-100">
                        <span class="material-symbols-outlined" aria-hidden="true">savings</span>
                        Realizar Aporte
                    </button>
                </form>
            </section>
        </div>

        <!-- Coluna Direita: Histórico de Aportes -->
        <div class="details-column">
            <section class="historico-card glass-panel">
                <h2 class="card-section-title">
                    <span class="material-symbols-outlined" aria-hidden="true">history</span>
                    Histórico de Aportes
                </h2>

                @if (Model.Aportes == null || !Model.Aportes.Any())
                {
                    <div class="empty-state-small">
                        <span class="material-symbols-outlined" aria-hidden="true">inbox</span>
                        <p>Nenhum aporte registrado ainda</p>
                    </div>
                }
                else
                {
                    <ul class="aportes-list" role="list">
                        @foreach (var aporte in Model.Aportes.OrderByDescending(a => a.DataAporte))
                        {
                            <li class="aporte-item" role="listitem">
                                <div class="aporte-date">
                                    <span class="material-symbols-outlined" aria-hidden="true">event</span>
                                    @aporte.DataAporte.ToString("dd/MM/yyyy")
                                </div>
                                <div class="aporte-value">@aporte.Valor.ToString("C")</div>
                            </li>
                        }
                    </ul>

                    <div class="aportes-summary">
                        <div class="summary-item">
                            <span>Total de Aportes</span>
                            <strong>@Model.Aportes.Count()</strong>
                        </div>
                        <div class="summary-item">
                            <span>Soma Total</span>
                            <strong>@Model.ValorAtual.ToString("C")</strong>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>

    <!-- Botão Voltar -->
    <div class="page-actions">
        <a asp-action="Index" class="btn-action btn-secondary">
            <span class="material-symbols-outlined" aria-hidden="true">arrow_back</span>
            Voltar para Metas
        </a>
    </div>

</main>

@section Scripts {
    <script src="~/js/metasFinanceiras.js" asp-append-version="true"></script>
}