@model IEnumerable<savemoney.Models.MetaFinanceira>

@{
    ViewData["Title"] = "Minhas Metas Financeiras";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success">
            <span class="material-icons align-middle">add_circle</span> Nova Meta
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Você ainda não possui metas cadastradas. Clique em "Nova Meta" para começar!
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>

                            <p class="card-text text-muted">
                                Objetivo: @item.ValorObjetivo.ToString("C")
                            </p>

                            <div class="mb-3 mt-auto">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>Progresso: @item.ValorAtual.ToString("C")</small>
                                    <small>@((item.Progresso * 100).ToString("0"))%</small>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(item.EstaConcluida ? "bg-success" : "bg-primary")"
                                        role="progressbar"
                                        style="width: @((item.Progresso * 100).ToString("0.##").Replace(",", "."))%"
                                        aria-valuenow="@item.ValorAtual" aria-valuemin="0" aria-valuemax="@item.ValorObjetivo">
                                    </div>
                                </div>
                            </div>

                            @if (item.EstaConcluida)
                            {
                                <span class="badge bg-success mb-3">Meta Concluída!</span>
                            }
                            else if (item.DataLimite.HasValue)
                            {
                                <small class="text-muted mb-3">Prazo: @item.DataLimite.Value.ToShortDateString()</small>
                            }

                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">
                                Ver Detalhes e Aportar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>