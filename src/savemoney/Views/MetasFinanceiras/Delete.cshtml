@model savemoney.Models.MetaFinanceira

@{
    ViewData["Title"] = "Remover Meta";
}

@section css {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/metasFinanceiras.css" asp-append-version="true" />
}

<main class="metas-page-main fade-in">

    <!-- Page Header -->
    <header class="page-header-simple">
        <h1 class="page-title">Remover Meta</h1>
        <p class="page-subtitle">Você está prestes a remover uma meta permanentemente</p>
    </header>

    <!-- Warning Alert -->
    <div class="alert alert-danger alert-large">
        <span class="material-symbols-outlined alert-icon" aria-hidden="true">warning</span>
        <div>
            <h3>Tem certeza que deseja remover a meta "<strong>@Model.Titulo</strong>"?</h3>
            <p>
                <strong>Atenção:</strong> Todos os aportes relacionados a esta meta também serão excluídos permanentemente. Esta ação não pode ser desfeita.
            </p>
        </div>
    </div>

    <!-- Confirmação -->
    <div class="form-container">
        <div class="form-card glass-panel">
            <h2 class="card-section-title">Informações da Meta</h2>

            <dl class="info-list">
                <div class="info-item">
                    <dt>Título</dt>
                    <dd>@Model.Titulo</dd>
                </div>
                <div class="info-item">
                    <dt>Valor Objetivo</dt>
                    <dd class="value-highlight">@Model.ValorObjetivo.ToString("C")</dd>
                </div>
                <div class="info-item">
                    <dt>Valor Atual</dt>
                    <dd class="value-highlight value-success">@Model.ValorAtual.ToString("C")</dd>
                </div>
                @if (Model.DataLimite.HasValue)
                {
                    <div class="info-item">
                        <dt>Data Limite</dt>
                        <dd>@Model.DataLimite.Value.ToString("dd/MM/yyyy")</dd>
                    </div>
                }
                @if (Model.Aportes != null && Model.Aportes.Any())
                {
                    <div class="info-item">
                        <dt>Total de Aportes</dt>
                        <dd><strong>@Model.Aportes.Count()</strong> aportes serão excluídos</dd>
                    </div>
                }
            </dl>

            <div class="form-divider"></div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-actions">
                    <a asp-action="Index" class="btn-action btn-secondary">
                        <span class="material-symbols-outlined" aria-hidden="true">arrow_back</span>
                        Cancelar
                    </a>
                    <button type="submit" class="btn-action btn-danger">
                        <span class="material-symbols-outlined" aria-hidden="true">delete_forever</span>
                        Remover Permanentemente
                    </button>
                </div>
            </form>
        </div>
    </div>

</main>

@section Scripts {
    <script src="~/js/metasFinanceiras.js" asp-append-version="true"></script>
}