@model savemoney.Models.MetaFinanceira

@{
    ViewData["Title"] = "Nova Meta Financeira";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ValorObjetivo" class="form-label"></label>
                            <input asp-for="ValorObjetivo" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ValorObjetivo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataLimite" class="form-label"></label>
                            <input asp-for="DataLimite" class="form-control" type="date" />
                            <span asp-validation-for="DataLimite" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <input type="submit" value="Salvar Meta" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}