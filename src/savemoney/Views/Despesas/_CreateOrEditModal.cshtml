@model savemoney.Models.Despesa
@using savemoney.Models

<div class="modal fade" id="despesaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Despesas"
                  asp-action="@(Model.Id == 0 ? "Create" : "Edit")"
                  method="post">

                @if (Model.Id != 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-cash-coin"></i>
                        @(Model.Id == 0 ? "Nova Despesa" : "Editar Despesa")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Titulo" class="form-label"></label>
                            <input asp-for="Titulo" class="form-control" placeholder="Ex: Supermercado, Netflix..." />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Valor" class="form-label"></label>
                            <div class="input-group">
                                <span id="currencySymbol" class="input-group-text">R$</span>
                                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CurrencyType" class="form-label"></label>
                        <select asp-for="CurrencyType" id="currencyType" class="form-select">
                            <option value="BRL">Real(BRL)</option>
                            <option value="USD">Dolar(USD)</option>
                            <option value="EUR">Euro(EUR)</option>
                            <option value="GBP">Libra (GBP)</option>
                            <option value="JPY">Iene (JPY)</option>
                        </select>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="DataInicio" class="form-label"></label>
                            <input type="date" asp-for="DataInicio" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DataFim" class="form-label"></label>
                            <input type="date" asp-for="DataFim" class="form-control" />
                        </div>
                    </div>

                    <!-- CATEGORIA COM ORÇAMENTO ATIVO + STATUS VISUAL -->
                    <div class="mt-3">
                        <label class="form-label fw-bold text-primary">
                            Categoria no Orçamento Atual
                        </label>
                        <select asp-for="BudgetCategoryId"
                                asp-items="@ViewBag.BudgetCategories"
                                class="form-select form-select-lg">
                        </select>
                        <div class="form-text text-muted mt-1">
                            <i class="bi bi-info-circle"></i>
                            Despesas sem categoria não afetam os limites do seu orçamento.
                        </div>
                        <span asp-validation-for="BudgetCategoryId" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <!-- RECORRÊNCIA -->
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsRecurring" class="form-check-input" type="checkbox" role="switch" id="isRecurringSwitch" />
                        <label class="form-check-label fw-bold" asp-for="IsRecurring">
                            Esta despesa é recorrente?
                        </label>
                    </div>

                    <div class="row g-3" id="recurrenceOptions" style="display: @(Model.IsRecurring ? "flex" : "none");">
                        <div class="col-md-6">
                            <label class="form-label">Frequência</label>
                            <select asp-for="Recurrence" asp-items="Html.GetEnumSelectList<Despesa.RecurrenceType>()" class="form-select">
                                <option value="">Selecione...</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RecurrenceCount" class="form-label">Quantas vezes?</label>
                            <input asp-for="RecurrenceCount" class="form-control" type="number" min="1" max="365" placeholder="Ex: 12 parcelas" />
                        </div>
                    </div>

                    <!-- PAGO  -->
                    <div class="form-check mt-4">
                        <input asp-for="Pago" class="form-check-input" type="checkbox" id="recebidoCheck" />
                        <label class="form-check-label text-success fw-bold" asp-for="Pago">
                            Já foi pago 
                        </label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Salvar Despesa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const chk = document.querySelector("input[name='IsRecurring']");
            const div = document.getElementById("recurrenceOptions");

            chk.addEventListener("change", function () {
                if (this.checked) {
                    div.style.display = "flex";
                } else {
                    div.style.display = "none";
                }
            });
        });
    </script>
}