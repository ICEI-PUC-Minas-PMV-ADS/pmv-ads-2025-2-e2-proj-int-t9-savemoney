@model IEnumerable<savemoney.Models.Despesa>

@{
    ViewData["Title"] = "Minhas Despesas";
    var totalPago = Model.Where(d => d.Pago).Sum(d => d.Valor);
    var totalPendente = Model.Where(d => !d.Pago).Sum(d => d.Valor);
}

@section css {
    <link rel="stylesheet" href="~/css/despesas.css" asp-append-version="true" />
}

<div class="despesas-page-main fade-in">

    <!-- Cabeçalho -->
    <header class="page-header">
        <div class="header-content">
            <h1 class="page-title">Despesas</h1>
            <p class="page-subtitle">Controle seus gastos e mantenha o orçamento em dia.</p>
        </div>
        <button class="btn-action btn-danger"
                onclick="carregarModalCriar()"
                aria-label="Criar nova despesa">
            <i class="bi bi-plus-lg" aria-hidden="true"></i>
            <span>Nova Despesa</span>
        </button>
    </header>

    <!-- Cards de estatísticas -->
    <section class="stats-row" role="region" aria-label="Resumo financeiro">
        <div class="stat-card glass-panel">
            <div class="stat-icon paid" aria-hidden="true">
                <i class="bi bi-check-lg"></i>
            </div>
            <div class="stat-info">
                <span class="stat-label">Pago Total</span>
                <span class="stat-value highlight-success">@totalPago.ToString("C")</span>
            </div>
        </div>
        <div class="stat-card glass-panel">
            <div class="stat-icon pending" aria-hidden="true">
                <i class="bi bi-exclamation-lg"></i>
            </div>
            <div class="stat-info">
                <span class="stat-label">A Pagar</span>
                <span class="stat-value highlight-danger">@totalPendente.ToString("C")</span>
            </div>
        </div>
    </section>

    <!-- Lista de despesas -->
    @if (!Model.Any())
    {
        <div class="empty-state glass-panel">
            <div class="empty-icon" aria-hidden="true">
                <i class="bi bi-cart-x"></i>
            </div>
            <h2>Nenhuma despesa registrada</h2>
            <p>Parabéns! Ou você ainda não lançou nada.</p>
            <button class="btn-action btn-secondary" onclick="carregarModalCriar()">
                Registrar Primeira Despesa
            </button>
        </div>
    }
    else
    {
        <div class="cards-grid" role="list">
            @foreach (var item in Model)
            {
                <article class="expense-card glass-panel" role="listitem">
                    <!-- Cabeçalho do card -->
                    <div class="card-header">
                        <div class="card-info">
                            <h3 class="card-title" title="@item.Titulo">@item.Titulo</h3>
                            <time class="card-date" datetime="@item.DataInicio.ToString("yyyy-MM-dd")">
                                @item.DataInicio.ToString("dd MMM, yyyy")
                            </time>
                        </div>
                        <div class="card-actions">
                            <button class="btn-icon"
                                    onclick="carregarModalEditar(@item.Id)"
                                    title="Editar despesa"
                                    aria-label="Editar despesa @item.Titulo">
                                <i class="bi bi-pencil-fill" aria-hidden="true"></i>
                            </button>
                            <button class="btn-icon danger"
                                    onclick="confirmarExclusao(@item.Id)"
                                    title="Excluir despesa"
                                    aria-label="Excluir despesa @item.Titulo">
                                <i class="bi bi-trash-fill" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Valor -->
                    <div class="card-amount">
                        <span class="currency">@item.CurrencyType</span>
                        <span class="amount">@item.Valor.ToString("N2")</span>
                    </div>

                    <div class="card-divider"></div>

                    <!-- Footer do card -->
                    <div class="card-footer">
                        <div class="tags-container">
                            @if (item.IsRecurring)
                            {
                                <span class="meta-tag">
                                    <i class="bi bi-arrow-repeat" aria-hidden="true"></i>
                                    @item.Recurrence
                                </span>
                            }
                            @if (item.BudgetCategory != null)
                            {
                                <span class="meta-tag">
                                    <i class="bi bi-tag-fill" aria-hidden="true"></i>
                                    @item.BudgetCategory.Category.Name
                                </span>
                            }
                        </div>

                        <span class="status-pill @(item.Pago ? "status-paid" : "status-unpaid")">
                            <span class="dot" aria-hidden="true"></span>
                            @(item.Pago ? "Pago" : "A Pagar")
                        </span>
                    </div>
                </article>
            }
        </div>
    }
</div>

<!-- Container para modais dinâmicos -->
<div id="modal-container"></div>

<!-- Modal de confirmação de exclusão -->
<div class="modal fade"
     id="deleteModal"
     tabindex="-1"
     aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content glass-panel">
            <div class="modal-body text-center p-4">
                <div class="modal-icon-warning" aria-hidden="true">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <h2 id="deleteModalLabel" class="modal-title-warning">Excluir Despesa?</h2>
                <p class="modal-text-secondary">
                    Isso removerá o registro do seu histórico permanentemente.
                </p>
                <div class="modal-actions">
                    <button type="button"
                            class="btn-action btn-secondary"
                            data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="button"
                            class="btn-action btn-danger"
                            onclick="executarExclusao()">
                        Excluir
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/despesas.js" asp-append-version="true"></script>
}