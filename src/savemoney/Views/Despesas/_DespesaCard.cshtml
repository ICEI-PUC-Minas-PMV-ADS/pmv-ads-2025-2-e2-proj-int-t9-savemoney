@model savemoney.Models.Despesa
@using System.ComponentModel.DataAnnotations

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <h5>@Model.Titulo</h5>
        <p><strong>Valor:</strong> @Model.Valor.ToString("C")</p>
        <p><strong>Data:</strong> @Model.DataInicio.ToShortDateString()</p>

        @if (Model.IsRecurring)
        {
            <span class="badge bg-info">Recorrente</span>
        }

        @if (Model.Pago)
        {
            <span class="badge bg-success">Pago</span>
        }

        <hr />

        <div class="d-flex justify-content-between">
            <button class="btn btn-primary" onclick="openReceitaModal(@Model.Id)">
                Editar
            </button>
            <button class="btn btn-sm btn-danger"
                    type="button"
                    onclick="openDeleteModal(@Model.Id, '@Model.Titulo')">
                Excluir
            </button>
        </div>
    </div>
</div>